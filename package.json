{
	"name": "kakoune-mode",
	"displayName": "Kakoune Mode",
	"description": "Uses Kakoune as the backend while editing",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./src/Extension.bs.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"configurationDefaults": {
			"editor.autoClosingBrackets": "never"
		},
		"keybindings": [
			{
				"key": "Escape",
				"command": "extension.send_escape",
				"when": "editorTextFocus"
			},
			{
				"key": "Backspace",
				"command": "extension.send_backspace",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npm run build",
		"re:start": "rescript build -w",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"build": "npm run re:build",
		"re:build": "rescript",
		"lint": "tslint -p ./tsconfig.json",
		"re:clean": "rescript clean",
		"watch": "npm run re:start"
	},
	"devDependencies": {
		"rescript": "^9.1.4"
	},
	"dependencies": {
		"@ryyppy/rescript-promise": "^2.1.0"
	}
}
